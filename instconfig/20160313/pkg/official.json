{
	"name": "official",
    "userName": "penyu",
    "version": "1.0.0",

    "ifmin": false,
    "gzipIf": false,
    "srcRev": false,
    "suffix": "",
	"injectIf":true,
	"changIf":true,

    "srcPath": "{#webappDir#}develop/official/html/",
    "destPath": "{#webappDstDir#}web/collect/",
    "destRoot":"mp/",
    "debarPath": "{废弃/**/*.*,/**/废弃.*,/**/废弃/*.*,/**/废弃/**/*.*}",

    "host": "127.0.0.1",
    "port": "8097",
    "serverPath": "{#webappDstDir#}web/collect/",
    "browser": "chrome",
	

    "copyFile": [{
            "psrc": "js/jquery/jquery-1.11.3.min.js",
            "dest":"js/jquery/"
		},{
            "psrc": "js/jquery/plugins/layer-v2.0/layer/**/*.*",
            "dest":"js/layer/"
		},{
            "psrc": "sass/control/control.scss",
            "dsrc":"sass/",
            "newFileName":"_control.scss"
		}],
    "copyDstDir": "",

    "jsonFile": [{
            "src": "json/**/*",
            "dest": "json/"
	}],
    "jsonDstDir": "json/",
	
	"imgFile": [{
        "src": "img/**/*",
		"dest": "img/"
	}, {
        "src": "css/**/*",
        "dest": "css/"
	}, {
        "src": "sass/**/*",
        "dest": "css/"
	}],
    "imgDstDir": "img/",
	
	"concatJs":[{
        "jsAnonymous":true,
        "psrc":"js/sub_js/initial/initial_jq",
        "fileName":"initial.js",
        "dest": "js/comm/"
	},{
        "jsAnonymous":true,
        "psrc":"js/sub_js/controls/Button",
        "fileName":"controls.js",
        "dest": "js/comm/"
	},{
        "jsAnonymous":true,
        "!psrc":"js/sub_js/switch/{Tab,Accordion,Align,Popup,Widescreen}",
        "fileName":"switch.js",
        "dest": "js/comm/"
	}],
	"concatDstJsFileName":"",
	
	"jsFile": [{
        "src": "js/**/*",
        "dest": "js/",
        "debar": "{_subDir/,_subDir/**/*.*}"
	},{
        "psrc": "js/viewport",
        "dest": "js/comm/"
	},{
        "jsAnonymous":true,
        "jsGlobalObj":"window",
        "psrc": "js/public-obj",
        "dest": "js/comm/"
	},{
        "psrc": "js/encrypt/sha1",
        "dest": "js/comm/"
	},{
		"psrc": "js/zeptoJs1.1.6/plugins/json/zepto.json.min",
		"dest":"js/zepto/"
	}],
    "jsDstDir": "js/",
	
	"sassFile": [{
        "src":"sass/**/*",
        "dest":"css/"
    }],
	
	"cssFile":"css/**/*",
    "cssDstDir": "css/",
	

	"ifminhtml": false,
	"ifminhtmlObj":{
        "removeComments": true,
        "collapseWhitespace": true,
        "conservativeCollapse": true,
        "preserveLineBreaks": true,
        "removeAttributeQuotes":false,
        "removeEmptyAttributes": false,
        "removeEmptyElements": false,
        "removeScriptTypeAttributes": false,
        "collapseBooleanAttributes": false,
        "removeStyleLinkTypeAttributes": false,
        "keepClosingSlash": true,
        "minifyJS": true,
        "minifyCSS":true
    },
	"htmlFile": [{
		"changIf":true,
        "src":"html/**/*",
        "debar": "tpls/**/*.*",
        "tpls":"html/tpls/"
    },{
        "root":"",
		"changIf":true,
        "src":"*",
        "tpls":"html/tpls/",
        "debar": "tpls/**/*.*"
    }],
    
    "tplsHtmlFile": "html/tpls/",
    "htmlDstDir":"",
	
	"injectPath":""
}