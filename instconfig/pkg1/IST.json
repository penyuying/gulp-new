{
    "name": "IST",
    "userName": "penyu",
    "version": "1.0.0",


    "ifmin": false,
    "ifEval":true,
    "evalConfig":{},
    "gzipIf": false,
    "srcRev": true,
    "suffix": "",
	"injectIf":true,
	"bannerIf":false,
	"changIf":false,
	"jsAnonymous":false,
    "mapIf": false,

    "dirName":"GP",
    "srcPath": "{#webappDir#}code/{#name#}/html/",
    "webPath": "{#webappDstDir#}webStock/",
    "destPath": "{#webPath#}{#dirName#}/",
    "destTest": "{#webPath#}test/{#dirName#}/",
    "revDestPath":"{#tempPath#}/rev/{#dirName#}/",
    "buildTempDir":"../temp/",

    "isTest":false,
	"testConfig":{
        "srcPath":[],
        "testConfigFile":"{#destTest#}{#dirName#}/test/config/karma.conf.js",
        "singleRun":false
    },
    "destRoot":"",

    "host": "127.0.0.1",
    "port": "8091",
    "serverPath": "{#webPath#}/{#dirName#}",
    "browser": "chrome",
	"anonymous":true,

    "copyFile": [{
            "psrc":"fonts/PyISTicon/Penyu/PyISTicon.*",
            "dest": "css/fonts/ISTicon/"
        },{
            "psrc": "js/layer.mobile/layer.mobile-v1.6/layer.m/**/*.css",
            "dest":"js/comm/"
        },{
            "changIf":false,
            "psrc": "sass/global/mixin.scss",
            "dsrc":"sass/",
            "newFileName":"_mixin.scss"
        },{
            "src":"release/fonts/**/*",
            "dest":"js/ionic/fonts/",
            "srcPath":"{#githubsrc#}ionic/"
        }],
    "copyDstDir": "",


    "jsonFile":"",
    "jsonDstDir": "json/",

    "imgFile": [{
        "src": "{images/,images/**/*}"
	},{
        "src": "sass/**/*",
        "dest": "css/"
    },{
        "src": "css/**/*",
        "dest": "css/"
	},{
        "src": "compass/images/*",
        "dest": "css/img/"
    },{
        "src": "{#tempPath#}compass/{#name#}/css/**/*",
        "dest": "css/",
        "srcPath":""
    }],
    "imgDstDir": "images/",

    "dirConcatJs": "",


    "concatJs":[{
            "ifmin":false,
            "ifEval":false,
            "jsAnonymous":true,
            "jsGlobalObj":"window",
            "psrc": "js/{public-obj,encrypt/jbase64,copy,layer.mobile/layer.mobile-v1.6/layer.m/**/*}",
            "fileName":"public-obj.js",
            "dest": "js/comm/"
        },{
            "jsAnonymous":true,
            "jsGlobalObj":"window",
            "src": [
                "{#buildTempDir#}main",
                "{#buildTempDir#}myAppHTMLCache",
                "../vendor/loadscript/script.min"
            ],
            "fileName":"{#dirName#}.js",
            "dest": "js/{#dirName#}/"
        },{
            "jsAnonymous":true,
            "psrc": "!js/zeptoJs1.1.6/{zepto,ajax,event,data}",
            "fileName":"zepto.min.js",
            "dest":"js/zepto/"
        },{
            "jsAnonymous":true,
            "jsGlobalObj":"window,angular",
            "src": "js/{#dirName#}/_subJs/{#dirName#}/**/*",
            "fileName":"{#dirName#}.js",
            "dest": "js/{#dirName#}/"
        },{
            "ifJsDoc":false,
            "jsAnonymous":true,
            "ifEval":false,
            "jsGlobalObj":"window",
            "src": [
                "release/js/angular/angular",
                "release/js/angular/angular-animate",
                "release/js/angular/angular-sanitize",
                "release/js/angular-ui/angular-ui-router",

                "js/ionic",
                "js/utils/delegateService",
                "js/utils/dom",
                "js/utils/events",
                "js/utils/gestures",
                "js/utils/platform",
                "js/utils/poly",
                "js/utils/tap",
                "js/utils/activator",
                "js/utils/utils",
                "js/utils/list",
                "js/utils/keyboard",
                "js/utils/viewport",

                "js/views/view",
                "js/views/scrollView",
                "js/views/scrollViewNative",
                "js/views/listView",
                "js/views/modalView",
                "js/views/sideMenuView",
                "js/views/sliderView",
                "js/views/toggleView",

                "js/angular/*",
                "js/angular/service/**/*",
                "js/angular/controller/**/*",
                "js/angular/directive/**/*"
            ],

            "dest":"js/ionic/",
            "debar": "{slide*.*,side*.*,menu*.*,checkbox*.*,popover*.*,spinner*.*,modal*.*,popup*.*,keyboard*.*}",
            "fileName":"ionic.bundle.min.js",
            "srcPath":"{#githubsrc#}ionic/"
        }],
    "concatDstJsFileName":"",

    "tsFile":[{
        "bannerIf":true,
        "ifEval":false,
        "src":["lib/**/*","ts/**/*.module","ts/**/*"],
        "fileName":"main.js",
        "dest": "{#buildTempDir#}",
        "destPath":"{#srcPath#}"
    }],

    "tsConfFile":"../tsconfig.json",

    "jsFile": [{
        "src": "js/**/*",
        "dest":"js/"
    },{
        "psrc": "!js/layer.mobile/layer.mobile-v1.6/layer.m/**/*",
        "dest":"js/layer/"
    }],
    "jsDstDir": "js/",


    "sassFile": [{
            "src":"sass/**/*",
            "dest":"css/"
        },{
            "src":"scss/*",
            "dest":"js/ionic/css/",
            "srcPath":"{#githubsrc#}ionic/"
    }],


    "compassFile": [{
        "src":"compass/**/*",
        "dest":"css/"
    }],
    "compassTemp":"{#tempPath#}compass/{#name#}/",
    "compassConfig": {
        "project": "{#srcPath#}/",
        "css":"{#compassTemp#}/css/",
        "config_file": "./config.rb",
        "sass": "compass/",
        "image": "compass/img/",
        "relative":true,
        "generated_images_path":"{#compassTemp#}css/img/",
        "http_path":"./",
        "import_path":""
    },

    "concatCss":"",
    "concatDstCssFileName":"concatCss.css",

    "cssFile":"css/**/*",
    "cssDstDir": "css/",

    "ngTplsFile":[{
        "destRoot":"",
        "ifEval":false,
        "jsAnonymous":false,
        "bannerIf":true,
        "src":"ts/**/*",
        "dest":"{#buildTempDir#}",
        "destPath":"{#srcPath#}",
        "conf":{
            "moduleName": "IST.app",
            "standalone": false,
            "useStrict": false,
            "prefix":"tpls/",
            "filePath": "myAppHTMLCache.js"
        }
    }],
    "ngTplsConf":{},
    "ngTplsDstDir":"js/",

	"ifminhtml": false,
	"ifminhtmlObj":{
        "removeComments": true,
        "collapseWhitespace": true,
        "conservativeCollapse": true,
        "preserveLineBreaks": false,
        "removeAttributeQuotes":false,
        "removeEmptyAttributes": false,
        "removeEmptyElements": false,
        "removeScriptTypeAttributes": false,
        "collapseBooleanAttributes": false,
        "removeStyleLinkTypeAttributes": false,
        "keepClosingSlash": true,
        "minifyJS": true,
        "minifyCSS":true
    },

    "templateFile":[{
        "changIf":true,
        "injectIf":false,
        "src":"tpls/**/*",
        "tpls":"_tpls/",
        "dest":"tpls/"
    }],
    "templateDstDir":"tpls/",

    "htmlFile": [{
		"changIf":true,
        "src":"html/**/*",
		"destRoot":"",
        "tpls":"_tpls/",
		"dest":"{#destRoot#}"
    }],

    "tplsHtmlFile": "_tpls/",
    "htmlDstDir":"",
    "injectPath":""
}