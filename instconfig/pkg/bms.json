{
    "name": "icip",
    "userName": "penyu",
    "version": "1.0.0",

    "ifmin": false,
    "ifEval":true,
    "gzipIf": false,
    "srcRev": false,
    "suffix": "",
	"injectIf":true,
	"changIf":false,

    "srcPath": "{#webappDir#}develop/icip/html/",
    "destPath": "{#webPath#}BMS/",
    "revDestPath":"{#webappDstDir#}temp/rev/BMS/",

    "host": "127.0.0.1",
    "port": "8093",
    "serverPath": "{#webPath#}/BMS/",
    "browser": "chrome",

    "copyFile":[{
            "psrc":"fonts/Pyicipicon/Penyu/Pyicipicon.*",
            "dest": "css/fonts/icipicon/"
        }],
    "copyDstDir": "",

    "jsonFile": "",
    "jsonDstDir": "",

    "imgFile": [{
        "src": "sass/**/*",
        "dest": "css/"
	}],
    "imgDstDir": "img/",

    "dirConcatJs":"",

    "concatJs":[{
        "ifmin": false,
        "ifEval":true,
        "jsAnonymous":true,
        "psrc":"js/sub_js/switch/{Tab,Accordion,Align,Popup,Widescreen,Floatfixed}",
        "fileName":"switch.js",
        "dest": "js/"
    }],
    "concatDstJsFileName":"",


    "jsFile": "",
    "jsDstDir": "",


    "sassFile": [{
        "src":"sass/**/*",
        "dest":"css/"
    }],

    "concatCss":"",
    "concatDstCssFileName":"concatCss.css",

    "cssFile":[{
		"psrc":"css/control",
		"dest":"css/"
	}],
    "cssDstDir": "",

	"ifminhtml": true,
	"ifminhtmlObj":{
        "removeComments": true,
        "collapseWhitespace": true,
        "conservativeCollapse": true,
        "preserveLineBreaks": false,
        "removeAttributeQuotes":false,
        "removeEmptyAttributes": false,
        "removeEmptyElements": false,
        "removeScriptTypeAttributes": false,
        "collapseBooleanAttributes": false,
        "removeStyleLinkTypeAttributes": false,
        "keepClosingSlash": true,
        "minifyJS": false,
        "minifyCSS":false
    },

    "htmlFile":[{
		"changIf":true,
        "destRoot":"",
        "src":"BMS/**/*"
    }],

    "tplsHtmlFile": "tpls/",
    "htmlDstDir":"WEB-INF/html/",

    "injectPath":false
}