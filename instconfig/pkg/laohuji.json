{
	"name": "webapp",
    "userName": "penyu",
    "version": "1.0.0",

    "ifmin": false,
    "ifEval":true,
    "gzipIf": false,
    "srcRev": false,
    "suffix": "",
	"injectIf":true,
	"changIf":false,
    "jsAnonymous":true,
    "jsGlobalObj":"window",
    "srcPath": "{#webappDir#}develop/laohuji/html/",
    "destPath": "{#webPath#}/collect/ms/",
    "revDestPath":"{#tempPath#}rev/ms/",
	"destRoot":"laohuji/",

    "host": "127.0.0.1",
    "port": "8092",
    "serverPath": "{#webPath#}/collect/laohuji/",
    "browser": "chrome",
	

    "copyFile": [{
            "changIf":false,
            "psrc": "sass/global/globalSkin.scss",
            "dsrc":"sass/",
			"newFileName":"globalSkin.scss"
		},{
            "changIf":false,
            "psrc": "sass/global/mixin.scss",
            "dsrc":"sass/",
			"newFileName":"_mixin.scss"
		}],
    "copyDstDir": "",

    "jsonFile": [{
            "!src": "json/**/*",
            "dest": "json/"
	}],
    "jsonDstDir": "json/",
	
	"imgFile": [{
        "src": "img/**/*",
		"dest": "img/"
	}, {
        "src": "css/**/*",
        "dest": "css/"
	},{
        "src": ["css/**/*","sass/**/*"],
        "dest": "css/"
	}],
    "imgDstDir": "img/",
	
	"concatJs":[{
        "ifmin": false,
        "ifEval":true,
        "psrc":"js/sub_js/initial/sub_initial_jq/control",
        "jsHeader":"$(function() {var cls = $('.JsW').get();for (var i = 0; i < cls.length; i++) {",
        "jsFooter":"}});",
        "fileName":"initial.js",
        "dest": "js/comm/"
    },{
        "ifmin": false,
        "ifEval":true,
        "psrc":"js/sub_js/controls/Button",
        "fileName":"controls.js",
        "dest": "js/comm/"
	}],
	"concatDstJsFileName":"",
	
	"jsFile": [{
        "ifmin": false,
        "ifEval":true,
        "psrc": "js/zeptoJs1.1.6/zepto.min",
        "dest":"js/zepto/"
    },{
        "src": "js/**/*",
        "dest": "js/",
        "debar": "_subDir/**/*.*"
	}, {
        "ifmin": false,
        "ifEval":true,
        "psrc": ["js/{viewport,public-obj}","js/sub_js/switch/mobile_iscroll"],
        "dest": "js/comm/"
	},{
        "ifmin": false,
        "ifEval":true,
		"psrc": "js/zeptoJs1.1.6/plugins/json/zepto.json.min",
		"dest":"js/zepto/"
	}],
    "jsDstDir": "js/",

	"sassFile": [{
        "src":"sass/**/*",
        "dest":"css/"
    }],

	"cssFile":"css/**/*",
    "cssDstDir": "css/",


	"ifminhtml": false,
	"ifminhtmlObj":{
        "removeComments": true,
        "collapseWhitespace": true,
        "conservativeCollapse": true,
        "preserveLineBreaks": true,
        "removeAttributeQuotes":false,
        "removeEmptyAttributes": false,
        "removeEmptyElements": false,
        "removeScriptTypeAttributes": false,
        "collapseBooleanAttributes": false,
        "removeStyleLinkTypeAttributes": false,
        "keepClosingSlash": true,
        "minifyJS": true,
        "minifyCSS":true
    },
	"htmlFile": [{
		"changIf":true,
        "src":"html/**/*",
		"destRoot":"",
        "debar": "tpls/**/*.*",
        "tpls":"html/tpls/"
    }],

    "tplsHtmlFile": "html/tpls/",
    "htmlDstDir":"",

	"injectPath":""
}